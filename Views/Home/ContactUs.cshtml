@{
    ViewData["Title"] = "Contact Us";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-6">
            <h1 class="mb-4">Contact KhumaloCraft</h1>
            <p class="lead">Do you have a question, or feedback? We'd love to hear from you!</p>
            <div class="mt-4">
                <h4>Contact Information</h4>
                <p><strong>Email:</strong> khumalocraft@gmail.com</p>
                <p><strong>Phone:</strong> +27 (72) 484-2473</p>
                <p><strong>Address:</strong> 45 Long avenue, Cape Town, South Africa</p>
            </div>
        </div>
        <div class="col-md-6">
            <h2 class="mb-4">Send Us a Message</h2>
            <form>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Send Message</button>
            </form>
        </div>
    </div>
</div>